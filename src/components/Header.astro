---
import { SITE_TITLE } from '../consts';
---

  <header class="header">
	<div class="contained">
		<h1 class="header-title">
			<a class="header-home-link" href="">
				<div class="typewriter-logo">
					
				</div>
				{SITE_TITLE}
			</a>
		</h1>
		<nav class="menu main-menu">
			<a class="menu-item menu-item-current" href="/about">About</a>
			<a class="menu-item" href="/email">EMAIL</a>
			<a class="menu-item" href="/stories">Stories</a>
		</nav>
	</div>
</header>


<style>
	header {
		text-transform: uppercase;
		display: flex;
		justify-content: space-between;
		align-items: center;	
	}
	a {
		display: inline-block;
	}
	a.active {
		font-weight: bolder;
		text-decoration: underline;
	}
	a {
		display: inline-block;
		text-decoration: none;
	}

	.typewriter-logo {
		width: 80px;
		height: 80px;
		margin-bottom: 0.5rem;
	}

	.typewriter-logo svg {
		width: 100%;
		height: 100%;
	}

	.typewriter-logo svg path {
		fill: var(--color-text);
		transition: fill 0.3s ease;
	}

	.header-home-link:hover .typewriter-logo svg path {
		fill: var(--color-link);
	}
</style>