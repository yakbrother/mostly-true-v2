---
import MainLayout from '../layouts/MainLayout.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

// Mock data for the Knowledge Book and Writing sections
const knowledgeEntries = [
  {
    title: 'Using the BigO correctly',
    date: '11/09/2024',
    url: '/blog/using-bigo'
  },
  {
    title: 'Avoiding useless commits | Git',
    date: '17/07/2023',
    url: '/blog/avoiding-useless-commits'
  },
  {
    title: 'Know the Unknown - Git | Part 1',
    date: '29/05/2023',
    url: '/blog/know-the-unknown-git-part-1'
  },
  {
    title: 'Code Isolation',
    date: '18/05/2023',
    url: '/blog/code-isolation'
  },
  {
    title: 'Hello World',
    date: '16/05/2023',
    url: '/blog/hello-world'
  }
];
---

<MainLayout title="BarelyHuman" description="For developers">
  <section class="section">
    <h2>Knowledge Book</h2>
    <table class="content-table">
      <thead>
        <tr>
          <th class="title-column">title</th>
          <th class="date-column">date</th>
        </tr>
      </thead>
      <tbody>
        {knowledgeEntries.map(entry => (
          <tr>
            <td class="title-column"><a href={entry.url}>{entry.title}</a></td>
            <td class="date-column">{entry.date}</td>
          </tr>
        ))}
      </tbody>
    </table>
  </section>
  
  <section class="section">
    <h2>Writing</h2>
    <table class="content-table">
      <thead>
        <tr>
          <th class="title-column">title</th>
          <th class="date-column">date</th>
        </tr>
      </thead>
      <tbody>
        {knowledgeEntries.map(entry => (
          <tr>
            <td class="title-column"><a href={entry.url}>{entry.title}</a></td>
            <td class="date-column">{entry.date}</td>
          </tr>
        ))}
      </tbody>
    </table>
  </section>
</MainLayout>

<style>
  .section {
    margin-bottom: 3rem;
  }
  
  h2 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    font-weight: 500;
  }
  
  .content-table {
    width: 100%;
    border-collapse: collapse;
  }
  
  .content-table th,
  .content-table td {
    padding: 0.75rem 0;
    text-align: left;
    border-bottom: 1px solid var(--color-text-muted);
  }
  
  .title-column {
    width: 80%;
  }
  
  .date-column {
    width: 20%;
    text-align: right;
  }
  
  a {
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  a:hover {
    color: var(--color-accent);
  }
</style>
