{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": "src",
    "paths": {
      "@content/*": ["content/*"],
      "@layouts/*": ["layouts/*"],
      "@components/*": ["components/*"],
      "@scripts/*": ["scripts/*"],
      "@styles/*": ["styles/*"]
    }
  }
}
